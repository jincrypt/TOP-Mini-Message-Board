extends layout

block content
  h1= title
  div.list-group
    a.btn.btn-primary(href="/new") New Message
    each message in messages
      div.list-group-item.list-group-item-action.d-flex.gap-3.py-3
        div.d-flex.gap-2.w-100.justify-content-between
          div 
            h6.mb-0 #{message.user}
            p.mb-0.opacity-75 #{message.text}
          small.opacity-50.text-nowrap #{message.added.toDateString()}